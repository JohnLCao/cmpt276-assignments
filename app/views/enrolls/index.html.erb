<p id="notice"><%= notice %></p>

<h1>Listing Enrolls</h1>

<table>
  <thead>
    <tr>
      <th>Student ID</th>
      <th>Student Name</th>
      <th>Course Name</th>
      <th>Percentage</th>
      <th>Letter Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrolls.each do |enroll| %>
      <tr>
        <td><%= enroll.student_id %></td> 
        <td><%= Student.find(enroll.student_id).name %></td>
        <td><%= enroll.course_name %></td>
        <td><%= enroll.percentage%></td>
        <td><%= enroll.lettergrade%></td>
        <td><%= link_to 'Show', enroll %></td>
        <td><%= link_to 'Edit', edit_enroll_path(enroll) %></td>
        <td><%= link_to 'Destroy', enroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

